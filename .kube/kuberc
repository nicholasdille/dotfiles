# https://kubernetes.io/docs/reference/kubectl/kuberc/

apiVersion: kubectl.config.k8s.io/v1beta1
kind: Preference

aliases:

  - name: gpo
    command: get
    prependArgs:
      - pods
    options:
      - name: output
        default: custom-columns=NAME:.metadata.name,STATUS:.status.phase,HOST:.spec.nodeName

  - name: sysgpo
    command: get
    prependArgs:
      - pods
    options:
      - name: namespace
        default: kube-system

  - name: gno
    command: get
    prependArgs:
      - nodes
    options:
      - name: output
        default: custom-columns=NAME:.metadata.name,STATUS:.status.conditions[?(@.reason=='KubeletReady')].type,CREATION:.metadata.creationTimestamp,VERSION:.status.nodeInfo.kubeletVersion,ARCH:.status.nodeInfo.architecture

defaults:

  # (1) default server-side apply
  - command: apply
    options:
      - name: server-side
        default: "true"

  # (2) default interactive deletion
  - command: delete
    options:
      - name: interactive
        default: "true"

